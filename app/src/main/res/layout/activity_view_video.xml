<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="vn.edu.hcmut.phatdo.finalday.ViewVideoActivity"
        android:background="@color/white">



    <VideoView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/videoView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
    />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="PUSH-UPS"
        android:textColor="#008cff"
        android:textSize="36sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/videoView" />
    <TextView
        android:text="Start in the regular push-up position but with your hands spread wider than your shoulder.\n\n\nThen push your body up and down."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDescription"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/txtName"
        android:layout_marginLeft="8dp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent" android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" android:textSize="24sp" android:textAlignment="viewStart"
        android:padding="20dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>
